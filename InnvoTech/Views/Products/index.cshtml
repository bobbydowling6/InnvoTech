@model InnvoTech.Models.ProductsViewModel
@{
    ViewData["Products"] = "Index";
}
<h1>Gadgets</h1>
<div class="jumbotron"> 
    <div class="container">
    <div class="row">
        <div class="col-5">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" />
        </div>
        <div class="col-7">
            <dl>
                <dt>Name</dt>
                <dd>@Model.Name</dd>
                <dt>Description</dt>
                <dd>@Model.Description</dd>
                <dt>Price</dt>
                <dd>@((Model.Price).ToString("C"))</dd>
            </dl>
            <button type="submit" class="btn btn-primary">Add to Cart</button>
        </div>
    </div>
</div>
</div>