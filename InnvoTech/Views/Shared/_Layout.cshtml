<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/images/logo.jpg" type="image/x-ico" height="50" width="50" />
    <title>@ViewData["Title"] - InnvoTech</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/gadgets.css" />
</head>
<body class="embed-responsive">
    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <div class="container">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><img src="~/images/logo.jpg" height="75" width="75" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav navbar-right">
                <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link" style="color:white">Home</a></li>
                <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="About" class="nav-link" style="color:white">About</a></li>
                <li class="nav-item"><a asp-area="" asp-controller="Contact" asp-action="Index" class="nav-link" style="color:white">Contact</a></li>
                <li class="nav-item"><a asp-area="" asp-controller="Products" asp-action="Gadgets" class="nav-link" style="color:white">Gadgets</a></li>
                @if (User.Identity.IsAuthenticated)
    {
            <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-link" style="color:white">Logout as @User.Identity.Name</a></li>

}
else
{
            <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link" style="color:white">Register</a></li>
            <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link" style="color:white">Login</a></li>
}
            </ul>
            </div>
        </div>
    </nav>
    <div id="wrapper">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2018 - InnvoTech</p>
            </footer>

            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
            <script src="~/lib/popper.js/dist/umd/popper.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>

            @RenderSection("Scripts", required: false)
        </div>
    </div>
</body>
</html>
