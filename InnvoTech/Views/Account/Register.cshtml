
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<div asp-validation-summary="All"></div>
<form method="post" asp-action="register" asp-controller="Account">
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input placeholder="Username" class="form-control" type="text" required/>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input placeholder="Password" class="form-control" type="password" required/>
                    </div>
                    <br />
                    <div>
                        <label for="staySignedIn">Stay Signed In</label>
                        <input name="staySignedIn" type="checkbox" />
                    </div>
                    <br />
                    <button type="submit"  class="btn btn-primary">Sign Up</button>                
                </div>             
            </div>
        </div>
    </div>
    </form>
