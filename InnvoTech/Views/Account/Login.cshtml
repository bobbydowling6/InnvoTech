
@{
    ViewData["Title"] = "Login";
}

<div asp-validation-summary="All"></div>
<form method="post" asp-action="login" asp-controller="Account">
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-xs-6">
            <h2>Welcome Back!</h2>
            <br />
            <div class="form-group">
                <label for="username">Username:</label>
                <input class="form-control" type="text" name="username" placeholder="Username" required />
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input class="form-control" type="password" name="password" placeholder="Password" required />
            </div>
            <div>
                <label for="staySignedIn">Stay Signed In</label>
                <input name="staySignedIn" type="checkbox" />
            </div>
            <div>
                @Html.ActionLink("Recover your password", "ForgotPassword")
            </div>
            <br />
            <button type="submit" value="Login" class="btn btn-info">Login</button>
        </div>
          </div>
            </div>
    </div>
</form>


